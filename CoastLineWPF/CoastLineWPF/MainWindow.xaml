<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="" Height="450" Width="500">
    <StackPanel>
        <Canvas Name="Controls" HorizontalAlignment="Left" Height="34" Margin="10,0,0,0" VerticalAlignment="Top">
            <Label Content="ε" Height="19" Canvas.Left="0" Canvas.Top="9" Padding="1"/>
            <TextBox x:Name ="Epsilon" HorizontalAlignment="Left" Height="18" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="140" RenderTransformOrigin="0.5,0.5" Canvas.Left="15" Canvas.Top="10"/>
            <Button x:Name="Refresh" Content="Refresh" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="55" Canvas.Left="160" Canvas.Top="10"/>
            <Button Name="EpsilonUp" Content="^" Width="19" Canvas.Left="220" Canvas.Top="9"/>
            <Button Name="EpsilonDown" Content="v" Width="19" Canvas.Left="245" Canvas.Top="9"/>
            <Label Content="Points:" Canvas.Left="270" Height="19" Canvas.Top="9" Padding="1" />
            <Label Name="PointCount"  Content="(point count)" Canvas.Left="310" Height="19" Canvas.Top="9" Padding="1" />
        </Canvas>
        <Canvas Name="Map" HorizontalAlignment="Stretch" Height="377" Margin="0,0,5,0" VerticalAlignment="Top">
        </Canvas>
    </StackPanel>

</Window>